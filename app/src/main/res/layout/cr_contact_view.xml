<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/crName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:ellipsize="end"
                android:textColor="@color/normalTextColor"
                android:maxLines="1"
                android:text="Name : Mr Example"
                android:textSize="@dimen/normal_text" />

        </LinearLayout>

        <TextView
            android:id="@+id/crDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/normalTextColor"
            android:textSize="@dimen/normal_text"
            android:text="Department : ABCD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/crLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:textSize="@dimen/small_text"
                android:textColor="@color/smallTextColor"
                android:text="Level : " />

            <TextView
                android:id="@+id/crSemester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:textColor="@color/smallTextColor"
                android:textSize="@dimen/small_text"
                android:text="Semester : " />
        </LinearLayout>

        <TextView
            android:id="@+id/crContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/normalTextColor"
            android:text="Contact : 01234567890" />
    </LinearLayout>
</LinearLayout>