<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactWithCr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarDemo"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/toolbarBackgroundColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="25sp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Cr Information"
                    android:textColor="@color/toolbarTextColor"
                    android:textSize="@dimen/toolbar_text" />
            </LinearLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/layPad">

                    <ImageView
                        android:id="@+id/crContactPicture"
                        android:layout_width="150sp"
                        android:layout_height="150sp"
                        android:layout_gravity="center"

                        android:layout_marginTop="@dimen/layPad"
                        android:layout_marginBottom="@dimen/layPad"
                        app:srcCompat="@drawable/ic_user_profile"
                        tools:ignore="VectorDrawableCompat" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/crContactName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:padding="@dimen/textPad"
                            android:text="Name"
                            android:textColor="@color/normalTextColor"
                            android:textSize="@dimen/normal_text" />

                        <TextView
                            android:id="@+id/crContactEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:padding="@dimen/textPad"
                            android:text="Email"
                            android:textColor="@color/normalTextColor"
                            android:textSize="@dimen/normal_text" />

                        <TextView
                            android:id="@+id/crContactPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/textPad"
                            android:text="Phone"
                            android:textColor="@color/normalTextColor"
                            android:textSize="@dimen/normal_text" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2sp"
                        android:layout_marginTop="@dimen/layPad"
                        android:layout_marginBottom="@dimen/layPad"
                        android:background="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/crContactStudentId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/textPad"
                            android:text="Student ID:"
                            android:textColor="@color/normalTextColor"
                            android:textSize="@dimen/normal_text" />

                        <TextView
                            android:id="@+id/crContactDepartment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/textPad"
                            android:text="Department"
                            android:textColor="@color/normalTextColor"
                            android:textSize="@dimen/normal_text" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/crContactLevel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/textPad"
                                android:text="Level"
                                android:textColor="@color/normalTextColor"
                                android:textSize="@dimen/normal_text" />

                            <TextView
                                android:id="@+id/crContactSemester"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/textPad"
                                android:text="Semester:"
                                android:textColor="@color/normalTextColor"
                                android:textSize="@dimen/normal_text" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/crContactSession"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/textPad"
                            android:text="Session:"
                            android:textColor="@color/normalTextColor"
                            android:textSize="@dimen/normal_text" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressBar2"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>