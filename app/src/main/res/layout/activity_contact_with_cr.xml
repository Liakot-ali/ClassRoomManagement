<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactWithCr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarDemo"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/toolbarBackgroundColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="25sp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Cr Information"
                    android:textColor="@color/toolbarTextColor"
                    android:textSize="@dimen/toolbar_text" />
            </LinearLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="@dimen/layPad"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/crContactPicture"
                        android:layout_width="100sp"
                        android:layout_height="100sp"

                        app:srcCompat="@drawable/ic_user_profile"
                        tools:ignore="VectorDrawableCompat" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/layPad"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/layPad"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView33"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/normal_text"
                            android:textColor="@color/buttonBackgroundColor"
                            android:text="Name:" />

                        <TextView
                            android:id="@+id/crContactName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/textPad"
                            android:text="CR Name"
                            android:textColor="@color/normalTextColor"
                            android:textSize="@dimen/normal_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/layPad"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView34"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Student ID:"
                            android:textColor="@color/buttonBackgroundColor"
                            android:textSize="@dimen/normal_text" />

                        <TextView
                            android:id="@+id/crContactStudentId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Student Id"
                            android:paddingLeft="@dimen/textPad"
                            android:textColor="@color/normalTextColor"
                            android:textSize="@dimen/normal_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/layPad"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView35"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email:"
                            android:textColor="@color/buttonBackgroundColor"
                            android:textSize="@dimen/normal_text" />

                        <TextView
                            android:id="@+id/crContactEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CR Email"
                            android:textColor="@color/normalTextColor"
                            android:textSize="@dimen/normal_text"
                            android:paddingLeft="@dimen/textPad" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/layPad"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView36"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phone Number:"
                            android:textColor="@color/buttonBackgroundColor"
                            android:textSize="@dimen/normal_text" />

                        <TextView
                            android:id="@+id/crContactPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CR Number"
                            android:paddingLeft="@dimen/textPad"
                            android:textColor="@color/normalTextColor"
                            android:textSize="@dimen/normal_text" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/crContactSession"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/textPad"
                        android:paddingBottom="@dimen/textPad"
                        android:textColor="@color/buttonBackgroundColor"
                        android:textSize="@dimen/normal_text"
                        android:text="Session" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>